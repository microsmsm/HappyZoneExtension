{
    "manifest_version": 2,
  
    "name": "HappyZone",
    "description": "This extension will keep you happy",
    "version": "1.1",
  
    "browser_action": {
     "default_icon": "icon.png",
     "default_popup": "popup.html"
    },
    "icons": { 
      "16": "icon16.png",
      "48": "icon48.png",
     "128": "icon128.png" }
     ,
    "permissions": [
     "https://www.facebook.com/*"
     ],
     "content_scripts": [
        {
          "matches": ["https://www.facebook.com/*"],
          "css": ["mystyles.css"],
          "js": ["myscript.js"]
        }
      ],
      "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
  }
